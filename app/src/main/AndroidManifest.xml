<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.farmersfriend">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/agricon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/agricon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FarmersHomeActivity"
            android:label="@string/title_activity_farmers_home"
            android:theme="@style/AppTheme.NoActionBar">
           </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.RegistrationActivity"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.LoginActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Activities.AdminHomeActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".Activities.PlaceOrderActivity"
            android:theme="@style/AppTheme">

        </activity>
        <activity android:name=".Activities.ShowOrderActivity"
            android:theme="@style/AppTheme">

        </activity>


    </application>

</manifest>