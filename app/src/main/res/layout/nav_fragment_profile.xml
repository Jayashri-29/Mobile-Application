<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/registration">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilecircular"
        android:layout_width="115dp"
        android:layout_height="120dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/profile"
        android:layout_centerHorizontal="true"
        />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="430dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/profilecircular"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/registrastionback"

        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:text="MAA Krushi Kendra"
            android:textSize="18dp"
            android:background="@drawable/textback"
            android:drawableLeft="@drawable/ic_profile"
            android:drawablePadding="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"
            android:padding="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtemail"
            android:layout_below="@+id/txtName"
            android:layout_marginTop="10dp"
            android:text="maakrushikendra@gmail.com"
            android:textColor="#fff"

            android:background="@drawable/textback"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="18dp"
            android:padding="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtcontact"
            android:layout_below="@+id/txtemail"
            android:layout_marginTop="10dp"
            android:text="7709746546"
            android:inputType="number"
            android:textColor="#fff"
            android:drawableLeft="@drawable/ic_mono"
            android:drawablePadding="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/textback"
            android:textSize="18dp"
            android:padding="10dp"

            />

    </RelativeLayout>

</RelativeLayout>