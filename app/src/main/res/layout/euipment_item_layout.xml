<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#5ECFDD">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview"
        android:backgroundTint="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <ImageView android:layout_width="80dp"
                       android:layout_height="150dp"
                      android:id="@+id/nav_equi_img"
                      android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_equiId"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_equitext_name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_below="@id/nav_equiId"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="10dp"
        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nav_equitext_brand"
                android:text="Brand :"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_below="@id/nav_equitext_name"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nav_txt_brand"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_below="@id/nav_equitext_name"
                android:layout_toRightOf="@id/nav_equitext_brand"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nav_txt_Rent"
                android:text="Rent:"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_below="@id/nav_equitext_brand"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="10dp"
                />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nav_equitext_Rent"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_below="@id/nav_equitext_brand"
        android:layout_toRightOf="@id/nav_txt_Rent"
        android:layout_marginRight="10dp"
        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_Rent"
                android:textSize="15sp"
                android:text="/day"
                android:textColor="#000"
                android:layout_below="@id/nav_equitext_brand"
                android:layout_toRightOf="@id/nav_equitext_Rent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp"
                />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nav_equitext_price"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_below="@id/nav_equitext_Rent"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="10dp"

        />
            <Button
                android:id="@+id/btn_equiAddCart"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="12sp"
                android:textColor="#FFF"
                android:background="@drawable/userbutton"
                android:layout_below="@id/nav_equitext_price"
                android:layout_marginLeft="90dp"/>
            <Button
                android:id="@+id/btn_equiBooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book"
                android:textSize="12sp"
                android:textColor="#FFF"
                android:background="@drawable/userbutton"
                android:layout_below="@id/nav_equitext_price"
                android:layout_toRightOf="@id/btn_equiAddCart"
                android:layout_marginLeft="90dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>